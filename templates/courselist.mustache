{{!
    @template block_masterdashboard/block_masterdashboard

    This template renders categorized course cards (overdue, inprogress, completed).

    Example context (json):
    {
        "introtext": "Willkommen!",
        "overdue": {
            "courses": [
                {
                    "name": "Mathematik",
                    "url": "https://example.com/course/1",
                    "duedate": "Montag, 24.06.2025",
                    "image": "https://example.com/image1.jpg"
                }
            ]
        },
        "inprogress": {
            "courses": [
                {
                    "name": "Deutsch",
                    "url": "https://example.com/course/2",
                    "enddate": "Dienstag, 25.06.2025",
                    "image": "https://example.com/image2.jpg"
                }
            ]
        },
        "completed": {
            "courses": [
                {
                    "name": "Englisch",
                    "url": "https://example.com/course/3",
                    "completiondate": "Sonntag, 23.06.2025",
                    "image": "https://example.com/image3.jpg"
                }
            ]
        }
    }
}}

<!-- File: templates/block_masterdashboard.mustache -->
<div class="block_masterdashboard">

    {{#introtext}}
    <div class="dashboardintro">{{{introtext}}}</div>
    {{/introtext}}

    {{#overdue}}
    <div class="section">
        <h3>Überfällige Kurse</h3>
        {{#courses}}
        <div class="course-card overdue">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Fällig am: {{duedate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/overdue}}

    {{#inprogress}}
    <div class="section">
        <h3>Kurse in Bearbeitung</h3>
        {{#courses}}
        <div class="course-card inprogress">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Endet am: {{enddate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/inprogress}}

    {{#completed}}
    <div class="section">
        <h3>Abgeschlossene Kurse</h3>
        {{#courses}}
        <div class="course-card completed">
            <img src="{{image}}" alt="{{name}}" class="course-thumb" />
            <div class="course-content">
                <div class="course-info">
                    <a href="{{url}}" class="course-name">{{name}}</a>
                    <div class="date">Abgeschlossen am: {{completiondate}}</div>
                </div>
            </div>
        </div>
        {{/courses}}
    </div>
    {{/completed}}

</div>
